<div class="auth-page">
  <div class="auth-container">
    <div class="auth-card">
      <div class="auth-card__header">
        <div class="auth-card__logo">
          <svg width="32" height="32" viewBox="0 0 21 21" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="10.5" cy="10.5" r="10.5" fill="#d97706"/>
          </svg>
          <span class="auth-card__logo-text">YUGO</span>
        </div>
        <h1 class="auth-card__title">Create an account</h1>
        <p class="auth-card__subtitle">Join us to plan your next adventure</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="auth-form__field">
          <%= f.label :email, "Email", class: "auth-form__label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-form__input", placeholder: "you@example.com" %>
        </div>

        <div class="auth-form__field">
          <%= f.label :password, "Password", class: "auth-form__label" %>
          <% if @minimum_password_length %>
            <span class="text-xs text-gray-500 float-right">(<%= @minimum_password_length %> chars min)</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "auth-form__input", placeholder: "••••••••" %>
        </div>

        <div class="auth-form__field">
          <%= f.label :password_confirmation, "Confirm Password", class: "auth-form__label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-form__input", placeholder: "••••••••" %>
        </div>

        <div class="auth-form__actions">
          <%= f.submit "Sign up", class: "auth-form__submit" %>
        </div>
      <% end %>

      <div class="auth-card__links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
