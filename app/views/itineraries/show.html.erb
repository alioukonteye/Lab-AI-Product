<div class="itinerary-page">
  <div class="itinerary-container">
    <!-- Header -->
    <div class="itinerary-header">
      <div>
        <h1 class="itinerary-title">
          Your Itinerary for <span class="text-highlight"><%= @trip.name %></span>
        </h1>
        <p class="itinerary-subtitle">Get ready for an amazing trip to <%= @trip.destination %>!</p>
      </div>
      <%= link_to "Back to Dashboard", trip_path(@trip), class: "btn-back" %>
    </div>

    <!-- Timeline -->
    <div class="timeline">
      <% @grouped_items.each do |day, items| %>
        <div class="timeline-day">
          <div class="day-marker">
            <span class="day-badge">Day <%= day %></span>
          </div>

          <div class="day-content">
            <% items.each do |item| %>
              <div class="activity-card">
                <div class="activity-card__image-wrapper">
                  <img src="<%= destination_image_url(item.activity_item.name) %>" alt="<%= item.activity_item.name %>" class="activity-card__image">
                </div>

                <div class="activity-card__content">
                  <div class="activity-card__header">
                    <h3 class="activity-card__title"><%= item.activity_item.name %></h3>
                    <% if item.activity_item.price && item.activity_item.price > 0 %>
                      <span class="activity-card__price"><%= number_to_currency(item.activity_item.price, unit: "â‚¬") %></span>
                    <% end %>
                  </div>

                  <p class="activity-card__description">
                    <%= item.activity_item.description %>
                  </p>

                  <div class="activity-card__footer">
                    <div class="activity-card__time">
                      <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      <%= item.time %>
                    </div>
                    <div class="activity-card__type">
                      <%= item.activity_item.activity_type %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Actions -->
    <div class="itinerary-actions">
      <button class="btn-primary">Download PDF</button>
      <button class="btn-secondary">Share Itinerary</button>
    </div>
  </div>
</div>
