<div class="bg-[#f6f6f6] min-h-screen relative overflow-hidden">
  <!-- Navbar -->
  <nav class="flex justify-between items-center px-12 py-8">
    <div class="flex items-center gap-2">
      <!-- Logo placeholder -->
      <div class="text-2xl font-bold text-gray-800">Yugo</div>
    </div>
    <div class="flex items-center gap-8">
      <%= link_to "My trips", "#", class: "text-[#d97706] font-semibold font-['Inter']" %>
      <%= link_to "Get inspired", "#", class: "text-[#d97706] font-semibold font-['Inter']" %>
      <% if user_signed_in? %>
        <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "px-6 py-2 bg-white text-gray-800 rounded-full font-semibold shadow-sm hover:shadow-md transition" %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: "px-6 py-2 bg-white text-gray-800 rounded-full font-semibold shadow-sm hover:shadow-md transition" %>
      <% end %>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="container mx-auto px-12 mt-20 flex relative">
    <div class="w-1/2 z-10 pt-10">
      <h1 class="font-['Crimson_Pro'] font-semibold text-[64px] leading-tight text-[#374151] mb-8">
        Start your unique adventure in Paris
      </h1>
      <h2 class="font-['Crimson_Pro'] font-semibold text-[30px] leading-normal text-[#374151] mb-12 max-w-lg">
        Let us know what you like, we build the perfect Parisian escapade for you
      </h2>

      <%= link_to "Start a trip", new_trip_path, class: "inline-block px-8 py-4 bg-[#d97706] text-white font-['Inter'] font-semibold text-lg rounded-full shadow-lg hover:bg-[#b45309] transition transform hover:-translate-y-1" %>
    </div>

    <!-- Image Section -->
    <div class="absolute right-0 top-0 w-[45%] h-[700px] rounded-l-[40px] overflow-hidden shadow-2xl">
      <!-- Placeholder image until we have the real asset -->
      <img src="https://images.unsplash.com/photo-1502602898657-3e91760cbb34?q=80&w=2973&auto=format&fit=crop" alt="Paris" class="object-cover w-full h-full">
    </div>
  </div>
</div>
