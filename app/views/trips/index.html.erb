<div class="trips-index">
  <div class="trips-index__container">
    <div class="trips-index__header">
      <h1 class="trips-index__title">My Trips</h1>
      <%= link_to new_trip_path, class: "trips-index__create-btn" do %>
        <svg class="trips-index__create-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        Create new trip
      <% end %>
    </div>

    <% if @trips.empty? %>
      <div class="trips-index__empty">
        <div class="trips-index__empty-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h2 class="trips-index__empty-title">No trips yet</h2>
        <p class="trips-index__empty-text">Start planning your next adventure!</p>
        <%= link_to new_trip_path, class: "trips-index__create-btn" do %>
          <svg class="trips-index__create-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          Create your first trip
        <% end %>
      </div>
    <% else %>
      <div class="trips-grid">
        <%= turbo_stream_from current_user %>
        <% @trips.each do |trip| %>
          <%= render "trip_card", trip: trip %>
        <% end %>
      </div>
      </div>
    <% end %>
  </div>
</div>
