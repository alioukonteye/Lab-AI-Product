<div class="min-h-screen bg-[#f6f6f6] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-[40px] shadow-xl">
    <div>
      <h2 class="mt-6 text-center text-3xl font-['Crimson_Pro'] font-bold text-gray-900">
        Create your new trip
      </h2>
    </div>
    <%= form_with(model: @trip, class: "mt-8 space-y-6") do |f| %>
      <% if @trip.errors.any? %>
        <div class="bg-red-50 p-4 rounded-lg">
          <h3 class="text-red-800 font-medium">Please fix the following errors:</h3>
          <ul class="list-disc list-inside text-red-700 mt-2">
            <% @trip.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="rounded-md shadow-sm -space-y-px">
        <div class="mb-4">
          <%= f.label :name, "Trip Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :name, class: "appearance-none rounded-xl relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-[#d97706] focus:border-[#d97706] focus:z-10 sm:text-sm", placeholder: "Summer in Paris" %>
        </div>
        <div class="mb-4">
          <%= f.label :destination, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :destination, class: "appearance-none rounded-xl relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-[#d97706] focus:border-[#d97706] focus:z-10 sm:text-sm", placeholder: "Paris, France" %>
        </div>
        <div class="grid grid-cols-2 gap-4 mb-4">
          <div>
            <%= f.label :start_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :start_date, class: "appearance-none rounded-xl relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-[#d97706] focus:border-[#d97706] focus:z-10 sm:text-sm" %>
          </div>
          <div>
            <%= f.label :end_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :end_date, class: "appearance-none rounded-xl relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-[#d97706] focus:border-[#d97706] focus:z-10 sm:text-sm" %>
          </div>
        </div>
        <div class="mb-4">
          <%= f.label :trip_type, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :trip_type, ["Solo", "Couple", "Friends", "Family"], {}, class: "appearance-none rounded-xl relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-[#d97706] focus:border-[#d97706] focus:z-10 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.submit "Create Trip", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-full text-white bg-[#d97706] hover:bg-[#b45309] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#d97706] transition transform hover:-translate-y-0.5 shadow-lg" %>
      </div>
    <% end %>
  </div>
</div>
